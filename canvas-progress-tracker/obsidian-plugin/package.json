{
  "name": "canvas-learning-system-plugin",
  "version": "1.0.1",
  "description": "Canvas Learning System - Obsidian Plugin for AI-assisted learning with Ebbinghaus-based review",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "deploy": "npm run build && npm run deploy:sync && npm run verify",
    "deploy:sync": "node scripts/sync-vault.mjs",
    "verify": "node scripts/verify-vault.mjs",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:pact": "jest --testPathPattern=pact --runInBand",
    "test:pact:publish": "pact-broker publish ./pacts --auto-detect-version-properties",
    "mock:init": "npx msw init public/",
    "lint": "eslint src/**/*.ts main.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "canvas",
    "learning",
    "feynman",
    "review",
    "ebbinghaus",
    "spaced-repetition"
  ],
  "author": "Canvas Learning System Team",
  "license": "MIT",
  "devDependencies": {
    "@pact-foundation/pact": "^13.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "builtin-modules": "3.3.0",
    "esbuild": "0.17.3",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "jest-canvas-mock": "^2.5.2",
    "msw": "^2.0.0",
    "ts-jest": "^29.1.0",
    "tslib": "2.4.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "obsidian": "latest"
  }
}
