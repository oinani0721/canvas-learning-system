{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "verification-history-response.schema.json",
  "title": "VerificationHistoryResponse",
  "description": "Story 31.4 AC-31.4.3, AC-31.4.4: 概念检验历史查询响应",
  "type": "object",
  "required": ["concept", "total_count", "items"],
  "properties": {
    "concept": {
      "type": "string",
      "description": "查询的概念名称"
    },
    "total_count": {
      "type": "integer",
      "description": "总记录数",
      "minimum": 0
    },
    "items": {
      "type": "array",
      "description": "检验历史记录列表",
      "items": {
        "$ref": "#/definitions/VerificationHistoryItem"
      }
    },
    "pagination": {
      "type": "object",
      "description": "分页信息",
      "properties": {
        "limit": {
          "type": "integer",
          "description": "每页数量",
          "minimum": 1,
          "maximum": 100
        },
        "offset": {
          "type": "integer",
          "description": "偏移量",
          "minimum": 0
        },
        "has_more": {
          "type": "boolean",
          "description": "是否还有更多数据"
        }
      }
    }
  },
  "definitions": {
    "VerificationHistoryItem": {
      "type": "object",
      "description": "单条检验历史记录 (AC-31.4.4)",
      "required": ["question_id", "question_text", "asked_at"],
      "properties": {
        "question_id": {
          "type": "string",
          "description": "问题唯一ID"
        },
        "question_text": {
          "type": "string",
          "description": "问题内容"
        },
        "question_type": {
          "type": "string",
          "description": "问题类型/角度",
          "enum": ["standard", "application", "comparison", "counterexample", "synthesis"]
        },
        "user_answer": {
          "type": ["string", "null"],
          "description": "用户回答 (如有)"
        },
        "score": {
          "type": ["integer", "null"],
          "description": "评分 (0-100, 如有)",
          "minimum": 0,
          "maximum": 100
        },
        "canvas_name": {
          "type": "string",
          "description": "来源Canvas"
        },
        "asked_at": {
          "type": "string",
          "format": "date-time",
          "description": "提问时间"
        }
      }
    }
  }
}
