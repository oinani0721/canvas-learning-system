{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://canvas-learning-system.com/schemas/node-read.schema.json",
  "x-source-verification": {
    "verified_at": "2025-11-25T19:55:00Z",
    "sources": [
