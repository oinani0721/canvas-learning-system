  "title": "ReviewSyncRequest",
  "description": "同步检验结果请求 - 将检验白板的通过结果同步回原Canvas",
  "type": "object",
  "properties": {
    "review_canvas_name": {
      "type": "string",
      "description": "检验白板名称"
    },
    "source_canvas_name": {
      "type": "string",
      "description": "原始Canvas名称"
    },
    "sync_mode": {
      "type": "string",
      "enum": ["green_only", "all_colors"],
      "default": "green_only",
      "description": "同步模式: green_only=仅同步绿色, all_colors=同步所有颜色变化"
    }
  },
  "required": ["review_canvas_name", "source_canvas_name"]
}
