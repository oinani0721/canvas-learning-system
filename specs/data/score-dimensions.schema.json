  "title": "ScoreDimensions",
  "description": "4维度评分结果 - 准确性、形象性、完整性、原创性",
  "type": "object",
  "properties": {
    "accuracy": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100,
      "description": "准确性分数 (0-100): 概念理解的正确程度"
    },
    "imagery": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100,
      "description": "形象性分数 (0-100): 解释是否生动易懂"
    },
    "completeness": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100,
      "description": "完整性分数 (0-100): 是否覆盖所有关键点"
    },
    "originality": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100,
      "description": "原创性分数 (0-100): 是否有独特见解"
    }
  },
  "required": ["accuracy", "imagery", "completeness", "originality"]
}
