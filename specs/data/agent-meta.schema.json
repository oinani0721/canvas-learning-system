{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://canvas-learning-system.com/schemas/agent-meta.schema.json",
  "x-source-verification": {
    "verified_at": "2025-11-25T20:00:00Z",
    "sources": [
      {"type": "prd", "section": "14 Agents Specification", "epic": "Epic 1-5"}
    ]
  },
  "title": "AgentMeta",
  "description": "Agent元数据 - 描述Agent的基本信息",
  "type": "object",
  "properties": {
    "type": {
      "$ref": "agent-type.schema.json",
      "description": "Agent类型"
    },
    "name": {
      "type": "string",
      "description": "Agent显示名称"
    },
    "description": {
      "type": "string",
      "description": "Agent功能描述"
    },
    "category": {
      "type": "string",
      "enum": ["decomposition", "scoring", "explanation", "verification", "system"],
      "description": "Agent分类"
    },
    "input_color": {
      "type": "array",
      "items": {"type": "string", "enum": ["1", "2", "3", "4", "5", "6"]},
      "description": "适用的输入节点颜色"
    },
    "output_format": {
      "type": "string",
      "enum": ["text_node", "file_node", "canvas_modification"],
      "description": "输出格式类型"
    }
  },
  "required": ["type", "name", "category"]
}
