  "title": "Batch Episodes Response",
  "description": "批量学习事件响应数据结构 (Story 30.3, AC-30.3.10)",
  "type": "object",
  "required": ["success", "processed", "failed", "timestamp"],
  "properties": {
    "success": {
      "type": "boolean",
      "description": "整体操作是否成功"
    },
    "processed": {
      "type": "integer",
      "minimum": 0,
      "description": "成功处理的事件数量"
    },
    "failed": {
      "type": "integer",
      "minimum": 0,
      "description": "处理失败的事件数量"
    },
    "errors": {
      "type": "array",
      "description": "错误详情列表",
      "items": {
        "type": "object",
        "required": ["index", "error"],
        "properties": {
          "index": {
            "type": "integer",
            "description": "失败事件在请求数组中的索引"
          },
          "error": {
            "type": "string",
            "description": "错误信息"
          }
        }
      }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "响应时间戳"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "success": true,
      "processed": 5,
      "failed": 0,
      "errors": [],
      "timestamp": "2026-01-16T12:00:00Z"
    },
    {
      "success": false,
      "processed": 3,
      "failed": 2,
      "errors": [
        {"index": 1, "error": "Invalid node_id format"},
        {"index": 4, "error": "Canvas path not found"}
      ],
      "timestamp": "2026-01-16T12:00:00Z"
    }
  ]
}
