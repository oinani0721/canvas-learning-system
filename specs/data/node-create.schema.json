{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://canvas-learning-system.com/schemas/node-create.schema.json",
  "x-source-verification": {
    "verified_at": "2025-11-25T19:55:00Z",
    "sources": [
      {"type": "context7", "library_id": "/obsidianmd/jsoncanvas", "topic": "node structure"},
      {"type": "context7", "library_id": "/websites/json-schema_understanding-json-schema", "topic": "conditional validation"},
      {"type": "prd", "section": "API 15.2", "epic": "Epic 15"}
    ]
  },
  "title": "NodeCreate",
  "description": "创建Canvas节点请求体. ID由服务器生成",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["text", "file", "link", "group"],
      "description": "节点类型 (Source: JSON Canvas Spec 1.0)"
    },
    "x": {
      "type": "integer",
      "description": "X坐标位置(像素)"
    },
    "y": {
      "type": "integer",
      "description": "Y坐标位置(像素)"
    },
    "width": {
      "type": "integer",
      "minimum": 50,
      "default": 250,
      "description": "节点宽度(像素)"
    },
    "height": {
      "type": "integer",
      "minimum": 30,
      "default": 60,
      "description": "节点高度(像素)"
    },
    "color": {
      "type": "string",
      "enum": ["1", "2", "3", "4", "5", "6"],
      "description": "节点颜色代码"
    },
    "text": {
      "type": "string",
      "description": "文本内容 (type=text时必填)"
    },
    "file": {
      "type": "string",
      "description": "文件路径 (type=file时必填)"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "链接URL (type=link时必填)"
    },
    "label": {
      "type": "string",
      "description": "分组标签 (type=group时可选)"
    }
  },
  "required": ["type", "x", "y"],
  "allOf": [
    {
      "if": {"properties": {"type": {"const": "text"}}},
      "then": {"required": ["text"]}
    },
    {
      "if": {"properties": {"type": {"const": "file"}}},
      "then": {"required": ["file"]}
    },
    {
      "if": {"properties": {"type": {"const": "link"}}},
      "then": {"required": ["url"]}
    }
  ]
}
