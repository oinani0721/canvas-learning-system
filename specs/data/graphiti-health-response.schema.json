  "title": "Graphiti Health Check Response",
  "description": "Graphiti客户端健康检查响应数据结构 (Story 30.3, AC-30.3.7)",
  "type": "object",
  "required": ["status"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["ok", "error"],
      "description": "Graphiti状态: ok=正常, error=不可用"
    },
    "graph_stats": {
      "type": "object",
      "description": "图统计信息(仅ok时存在)",
      "properties": {
        "node_count": {
          "type": "integer",
          "minimum": 0,
          "description": "图中节点数量"
        },
        "edge_count": {
          "type": "integer",
          "minimum": 0,
          "description": "图中边(关系)数量"
        },
        "episode_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Episode(学习事件)数量"
        }
      }
    },
    "last_episode_timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "最近episode的时间戳(仅ok时存在)"
    },
    "error": {
      "type": "string",
      "description": "错误信息(仅error时存在)"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "status": "ok",
      "graph_stats": {
        "node_count": 1234,
        "edge_count": 5678,
        "episode_count": 890
      },
      "last_episode_timestamp": "2026-01-15T15:30:00Z"
    },
    {
      "status": "error",
      "error": "Graphiti client not initialized: Neo4j connection failed"
    }
  ]
}
