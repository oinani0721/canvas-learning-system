{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "score-history-response.schema.json",
  "title": "ScoreHistoryResponse",
  "description": "Story 31.5 AC-31.5.1: 概念历史得分查询响应",
  "type": "object",
  "required": ["concept_id", "canvas_name", "scores", "timestamps", "average", "sample_size"],
  "properties": {
    "concept_id": {
      "type": "string",
      "description": "概念节点ID"
    },
    "canvas_name": {
      "type": "string",
      "description": "Canvas文件名"
    },
    "scores": {
      "type": "array",
      "description": "历史得分列表 (0-100分制, 按时间顺序从旧到新)",
      "items": {
        "type": "integer",
        "minimum": 0,
        "maximum": 100
      },
      "examples": [[65, 72, 78, 82, 85]]
    },
    "timestamps": {
      "type": "array",
      "description": "对应的时间戳列表",
      "items": {
        "type": "string",
        "format": "date-time"
      }
    },
    "average": {
      "type": "number",
      "description": "平均得分 (0-100)",
      "minimum": 0,
      "maximum": 100,
      "examples": [76.4]
    },
    "sample_size": {
      "type": "integer",
      "description": "实际返回的记录数量",
      "minimum": 0,
      "examples": [5]
    }
  }
}
