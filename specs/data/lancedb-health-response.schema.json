  "title": "LanceDB Health Check Response",
  "description": "LanceDB向量库健康检查响应数据结构 (Story 30.3, AC-30.3.8)",
  "type": "object",
  "required": ["status"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["ok", "error"],
      "description": "LanceDB状态: ok=正常, error=不可用"
    },
    "table_count": {
      "type": "integer",
      "minimum": 0,
      "description": "向量表数量(仅ok时存在)"
    },
    "total_vectors": {
      "type": "integer",
      "minimum": 0,
      "description": "向量总数(仅ok时存在)"
    },
    "embedding_model": {
      "type": "string",
      "description": "使用的Embedding模型名称(仅ok时存在)"
    },
    "error": {
      "type": "string",
      "description": "错误信息(仅error时存在)"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "status": "ok",
      "table_count": 3,
      "total_vectors": 50000,
      "embedding_model": "text-embedding-3-small"
    },
    {
      "status": "error",
      "error": "LanceDB directory not found: /data/lancedb"
    }
  ]
}
