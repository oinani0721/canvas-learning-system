{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://canvas-learning-system.com/schemas/review-generate-request.schema.json",
  "x-source-verification": {
    "verified_at": "2025-12-13T00:00:00Z",
    "sources": [
      {"type": "prd", "section": "API 15.2.9", "epic": "Epic 15"},
      {"type": "prd", "section": "Verification Canvas", "epic": "Epic 4"},
      {"type": "story", "section": "Story 24.1", "epic": "Epic 24"}
    ]
  },
  "title": "ReviewGenerateRequest",
  "description": "生成检验白板请求 - 基于原始Canvas生成无答案的检验版本 (支持fresh/targeted模式)",
  "type": "object",
  "properties": {
    "canvas_name": {
      "type": "string",
      "description": "原始Canvas文件名"
    },
    "include_colors": {
      "type": "array",
      "items": {"type": "string", "enum": ["1", "2", "3", "4", "5", "6"]},
      "default": ["3", "4"],
      "description": "包含哪些颜色的节点生成问题 (默认: 紫色3和红色4)"
    },
    "question_count": {
      "type": "integer",
      "minimum": 1,
      "maximum": 50,
      "description": "生成问题数量上限"
    },
    "mode": {
      "type": "string",
      "enum": ["fresh", "targeted"],
      "default": "fresh",
      "description": "复习模式: fresh=全新检验(盲测), targeted=针对性复习(薄弱点优先)"
    },
    "weak_weight": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "default": 0.7,
      "description": "targeted模式下薄弱概念的权重 (默认: 0.7 = 70%)"
    },
    "mastered_weight": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "default": 0.3,
      "description": "targeted模式下已掌握概念的权重 (默认: 0.3 = 30%)"
    }
  },
  "required": ["canvas_name"]
}
