{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://canvas-learning-system.com/schemas/explain-response.schema.json",
  "x-source-verification": {
    "verified_at": "2025-11-25T20:00:00Z",
    "sources": [
      {"type": "prd", "section": "API 15.2.4-15.2.8", "epic": "Epic 15"}
    ]
  },
  "title": "ExplainResponse",
  "description": "解释类Agent响应 - 包含生成的解释内容",
  "type": "object",
  "properties": {
    "node_id": {
      "type": "string",
      "description": "目标节点ID"
    },
    "explain_type": {
      "type": "string",
      "enum": ["oral", "clarification", "comparison", "memory", "four-level", "example"],
      "description": "解释类型"
    },
    "content": {
      "type": "string",
      "description": "生成的解释内容(Markdown格式)"
    },
    "word_count": {
      "type": "integer",
      "description": "内容字数"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "生成时间"
    },
    "file_node": {
      "type": "object",
      "properties": {
        "id": {"type": "string"},
        "file": {"type": "string"}
      },
      "description": "如果内容保存为文件节点，返回节点信息"
    }
  },
  "required": ["node_id", "explain_type", "content"]
}
