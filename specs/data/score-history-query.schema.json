{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "score-history-query.schema.json",
  "title": "ScoreHistoryQuery",
  "description": "Story 31.5 AC-31.5.1: 概念历史得分查询请求参数",
  "type": "object",
  "required": ["concept_id", "canvas_name"],
  "properties": {
    "concept_id": {
      "type": "string",
      "description": "概念节点ID",
      "examples": ["node-abc123"]
    },
    "canvas_name": {
      "type": "string",
      "description": "Canvas文件名",
      "examples": ["离散数学.canvas"]
    },
    "limit": {
      "type": "integer",
      "description": "返回的历史记录数量上限",
      "minimum": 1,
      "maximum": 20,
      "default": 5
    }
  }
}
