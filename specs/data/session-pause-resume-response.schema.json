{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "session-pause-resume-response.schema.json",
  "title": "SessionPauseResumeResponse",
  "description": "Story 31.6 AC-31.6.4: 会话暂停/恢复操作响应",
  "type": "object",
  "required": [
    "session_id",
    "status",
    "message"
  ],
  "properties": {
    "session_id": {
      "type": "string",
      "description": "会话标识符",
      "examples": ["sess_abc123"]
    },
    "status": {
      "type": "string",
      "description": "操作后的会话状态",
      "enum": ["pending", "in_progress", "paused", "completed", "cancelled"],
      "examples": ["paused"]
    },
    "message": {
      "type": "string",
      "description": "操作结果消息",
      "examples": ["Session paused successfully"]
    }
  }
}
