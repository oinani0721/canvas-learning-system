{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://canvas-learning.com/schemas/temporal-event.schema.json",
  "x-source-verification": {
    "verified_at": "2026-01-17T00:00:00Z",
    "sources": [
      {"type": "context7", "library_id": "/json-schema-org/json-schema-spec", "topic": "draft-07 schema validation"},
      {"type": "prd", "section": "FR2", "epic": "Epic 12"},
      {"type": "story", "section": "Task-6.2", "story": "30.8"}
    ]
  },
  "title": "时序学习事件",
  "description": "Temporal Memory中的学习事件记录 (Epic 12, Story 30.8). Context7 Verified: /json-schema-org/json-schema-spec (draft-07)",
  "type": "object",
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "事件唯一标识"
    },
    "session_id": {
      "type": "string",
      "description": "会话ID"
    },
    "subject": {
      "type": "string",
      "description": "学科名称，从canvas_path自动推断或手动指定 (AC-30.8.2/AC-30.8.4)",
      "x-story": "30.8"
    },
    "group_id": {
      "type": "string",
      "description": "命名空间隔离ID，用于多学科隔离 (AC-30.8.1). 支持Unicode字符(中文等)",
      "pattern": "^[\\w]+(:[\\w]+)?$",
      "x-story": "30.8",
      "examples": ["数学", "math", "托福_listening"]
    },
    "event_type": {
      "type": "string",
      "enum": [
        "decomposition_completed",
        "scoring_completed",
        "explanation_generated",
        "review_canvas_created",
        "concept_reviewed",
        "canvas_opened",
        "node_created",
        "node_updated",
        "edge_created",
        "color_changed"
      ],
      "description": "事件类型 (Story 30.5 AC-30.5.2添加edge_created)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "事件发生时间"
    },
    "canvas_path": {
      "type": "string",
      "description": "关联Canvas路径"
    },
    "node_id": {
      "type": "string",
      "description": "关联节点ID（可选）"
    },
    "edge_id": {
      "type": "string",
      "description": "关联边ID（可选）(Story 30.5 AC-30.5.2)"
    },
    "agent_type": {
      "type": "string",
      "description": "执行的Agent类型（可选）"
    },
    "metadata": {
      "type": "object",
      "description": "事件元数据",
      "properties": {
        "concept": {
          "type": "string",
          "description": "相关概念"
        },
        "score": {
          "type": "number",
          "description": "评分值"
        },
        "duration_ms": {
          "type": "integer",
          "description": "操作耗时(ms)"
        },
        "result_count": {
          "type": "integer",
          "description": "结果数量"
        },
        "old_color": {
          "type": "string",
          "enum": ["1", "2", "3", "4", "5", "6"],
          "description": "变化前颜色代码 (Story 30.3 AC-30.3.11)"
        },
        "new_color": {
          "type": "string",
          "enum": ["1", "2", "3", "4", "5", "6"],
          "description": "变化后颜色代码 (Story 30.3 AC-30.3.11)"
        },
        "old_level": {
          "type": "string",
          "enum": ["not_understood", "learning", "mastered", "pending_verification"],
          "description": "变化前掌握等级 (Story 30.3 AC-30.3.11)"
        },
        "new_level": {
          "type": "string",
          "enum": ["not_understood", "learning", "mastered", "pending_verification"],
          "description": "变化后掌握等级 (Story 30.3 AC-30.3.11)"
        }
      }
    },
    "user_id": {
      "type": "string",
      "description": "用户ID"
    }
  },
  "required": ["event_id", "session_id", "event_type", "timestamp"]
}
