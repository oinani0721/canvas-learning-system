{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://canvas-learning.com/schemas/temporal-event.schema.json",
  "title": "时序学习事件",
  "description": "Temporal Memory中的学习事件记录 (Epic 12)",
  "type": "object",
  "properties": {
    "event_id": {
      "type": "string",
      "format": "uuid",
      "description": "事件唯一标识"
    },
    "session_id": {
      "type": "string",
      "description": "会话ID"
    },
    "event_type": {
      "type": "string",
      "enum": [
        "decomposition_completed",
        "scoring_completed",
        "explanation_generated",
        "review_canvas_created",
        "concept_reviewed",
        "canvas_opened",
        "node_created",
        "node_updated"
      ],
      "description": "事件类型"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "事件发生时间"
    },
    "canvas_path": {
      "type": "string",
      "description": "关联Canvas路径"
    },
    "node_id": {
      "type": "string",
      "description": "关联节点ID（可选）"
    },
    "agent_type": {
      "type": "string",
      "description": "执行的Agent类型（可选）"
    },
    "metadata": {
      "type": "object",
      "description": "事件元数据",
      "properties": {
        "concept": {
          "type": "string",
          "description": "相关概念"
        },
        "score": {
          "type": "number",
          "description": "评分值"
        },
        "duration_ms": {
          "type": "integer",
          "description": "操作耗时(ms)"
        },
        "result_count": {
          "type": "integer",
          "description": "结果数量"
        }
      }
    },
    "user_id": {
      "type": "string",
      "description": "用户ID"
    }
  },
  "required": ["event_id", "session_id", "event_type", "timestamp"]
}
