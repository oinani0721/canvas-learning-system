  "title": "NodeUpdate",
  "description": "更新Canvas节点请求体. 所有字段可选，仅更新提供的字段",
  "type": "object",
  "properties": {
    "x": {
      "type": "integer",
      "description": "X坐标位置(像素)"
    },
    "y": {
      "type": "integer",
      "description": "Y坐标位置(像素)"
    },
    "width": {
      "type": "integer",
      "minimum": 50,
      "description": "节点宽度(像素)"
    },
    "height": {
      "type": "integer",
      "minimum": 30,
      "description": "节点高度(像素)"
    },
    "color": {
      "type": "string",
      "enum": ["1", "2", "3", "4", "5", "6"],
      "description": "节点颜色代码"
    },
    "text": {
      "type": "string",
      "description": "文本内容 (仅text类型节点)"
    }
  },
  "minProperties": 1,
  "additionalProperties": false
}
