{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://canvas-learning-system.com/schemas/node-score.schema.json",
  "x-source-verification": {
    "verified_at": "2025-11-25T19:15:00Z",
    "sources": [
      {"type": "context7", "library_id": "/json-schema-org/json-schema-spec", "topic": "draft-07 schema validation"},
      {"type": "prd", "section": "FR2", "epic": "Epic 11, Epic 15"}
    ]
  },
  "title": "Node Score",
  "description": "节点评分结果(4维度评分系统). Source: PRD Epic 15, Canvas Learning System评分标准. Context7 Verified: /json-schema-org/json-schema-spec (draft-07)",
  "type": "object",
  "required": ["node_id", "accuracy", "imagery", "completeness", "originality", "total", "new_color"],
  "properties": {
    "node_id": {
      "type": "string",
      "description": "节点ID"
    },
    "accuracy": {
      "type": "number",
      "minimum": 0,
      "maximum": 10,
      "description": "准确性得分 - 核心概念表述是否精准"
    },
    "imagery": {
      "type": "number",
      "minimum": 0,
      "maximum": 10,
      "description": "形象性得分 - 是否使用具体例子和类比"
    },
    "completeness": {
      "type": "number",
      "minimum": 0,
      "maximum": 10,
      "description": "完整性得分 - 关键要点是否涵盖"
    },
    "originality": {
      "type": "number",
      "minimum": 0,
      "maximum": 10,
      "description": "原创性得分 - 是否有独立思考和个人理解"
    },
    "total": {
      "type": "number",
      "minimum": 0,
      "maximum": 40,
      "description": "总分(0-40)"
    },
    "new_color": {
      "type": "string",
      "enum": ["2", "3", "4"],
      "description": "评分后节点颜色: 2=绿(>=32分,已掌握), 3=黄(24-31分,基本理解), 4=红(<24分,需加强)"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "node_id": "b33c50660173e5d3",
      "accuracy": 8,
      "imagery": 7,
      "completeness": 9,
      "originality": 8,
      "total": 32,
      "new_color": "2"
    }
  ]
}
