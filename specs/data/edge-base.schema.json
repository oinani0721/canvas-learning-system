{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://canvas-learning-system.com/schemas/edge-base.schema.json",
  "x-source-verification": {
    "verified_at": "2025-11-25T19:55:00Z",
    "sources": [
      {"type": "context7", "library_id": "/obsidianmd/jsoncanvas", "topic": "edge structure"},
      {"type": "official_doc", "url": "https://jsoncanvas.org/spec/1.0/"},
      {"type": "sample_analysis", "files": ["test-basic.canvas", "test-review.canvas"]}
    ]
  },
  "title": "EdgeBase",
  "description": "Canvas边基础属性 - 定义节点间连接关系. Verified from JSON Canvas Spec 1.0",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "边唯一ID (Source: JSON Canvas Spec 1.0)"
    },
    "fromNode": {
      "type": "string",
      "description": "起始节点ID (Source: JSON Canvas Spec 1.0)"
    },
    "toNode": {
      "type": "string",
      "description": "目标节点ID (Source: JSON Canvas Spec 1.0)"
    },
    "fromSide": {
      "type": "string",
      "enum": ["top", "right", "bottom", "left"],
      "description": "起始节点连接方位 (Source: JSON Canvas Spec 1.0)"
    },
    "toSide": {
      "type": "string",
      "enum": ["top", "right", "bottom", "left"],
      "description": "目标节点连接方位 (Source: JSON Canvas Spec 1.0)"
    },
    "fromEnd": {
      "type": "string",
      "enum": ["none", "arrow"],
      "default": "none",
      "description": "起始端点形状 (Source: JSON Canvas Spec 1.0)"
    },
    "toEnd": {
      "type": "string",
      "enum": ["none", "arrow"],
      "default": "arrow",
      "description": "目标端点形状 (Source: JSON Canvas Spec 1.0)"
    },
    "color": {
      "type": "string",
      "description": "边颜色 (Source: JSON Canvas Spec 1.0)"
    },
    "label": {
      "type": "string",
      "description": "边标签文本 (Source: JSON Canvas Spec 1.0)"
    }
  },
  "required": ["id", "fromNode", "toNode"]
}
