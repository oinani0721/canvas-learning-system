{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://canvas-learning-system.com/schemas/canvas-meta.schema.json",
  "x-source-verification": {
    "verified_at": "2025-11-25T19:55:00Z",
    "sources": [
      {"type": "prd", "section": "API 15.2", "epic": "Epic 15"},
      {"type": "architecture", "doc": "EPIC-15-FastAPI.md"}
    ]
  },
  "title": "CanvasMeta",
  "description": "Canvas文件元数据 - 文件级别的元信息",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Canvas文件名(不含扩展名)"
    },
    "path": {
      "type": "string",
      "description": "Canvas文件完整路径"
    },
    "modified_at": {
      "type": "string",
      "format": "date-time",
      "description": "最后修改时间 (ISO 8601格式)"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "创建时间 (ISO 8601格式)"
    },
    "node_count": {
      "type": "integer",
      "minimum": 0,
      "description": "节点总数"
    },
    "edge_count": {
      "type": "integer",
      "minimum": 0,
      "description": "边总数"
    },
    "color_stats": {
      "type": "object",
      "properties": {
        "red": {"type": "integer", "minimum": 0, "description": "红色节点数(不理解)"},
        "purple": {"type": "integer", "minimum": 0, "description": "紫色节点数(似懂非懂)"},
        "green": {"type": "integer", "minimum": 0, "description": "绿色节点数(已理解)"},
        "yellow": {"type": "integer", "minimum": 0, "description": "黄色节点数(个人理解)"}
      },
      "description": "按颜色统计节点数量"
    }
  },
  "required": ["name", "path"]
}
